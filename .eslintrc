{
  "extends": "@avalanche/eslint-config",
  "rules": {
    "comma-dangle": [2, {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "never"
    }]
  },
  "globals": {
    "fixture": true,
    "test": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  }
}
