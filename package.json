{
  "name": "markus-oberlehner-net",
  "description": "Generator for the personal website of Markus Oberlehner",
  "version": "0.0.1",
  "author": "Markus Oberlehner",
  "homepage": "https://markus.oberlehner.net",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avalanchesass/markus-oberlehner-net"
  },
  "bugs": {
    "url": "https://github.com/avalanchesass/markus-oberlehner-net/issues"
  },
  "devDependencies": {
    "@avalanche/object-container": "^4.0.0-alpha.4",
    "@avalanche/object-grid": "^4.0.0-alpha.10",
    "@avalanche/object-vertical-spacing": "^4.0.0-alpha.1",
    "@avalanche/utility-width": "^4.0.0-alpha.4",
    "autoprefixer": "^6.7.6",
    "clean-css": "^4.0.8",
    "eslint": "^3.17.1",
    "eslint-config-modularis": "^4.0.0",
    "eslint-plugin-import": "^2.2.0",
    "glob": "^7.1.1",
    "handlebars": "^4.0.6",
    "highlight.js": "^9.10.0",
    "htmlclean": "^2.7.10",
    "lighthouse": "^1.6.0",
    "marked": "^0.3.6",
    "mkdirp": "^0.5.1",
    "moment": "^2.17.1",
    "node-sass": "^4.5.0",
    "node-sass-magic-importer": "^4.1.3",
    "postcss": "^5.2.16",
    "postcss-scss": "^0.4.1",
    "static-http2-server": "^1.5.6",
    "stylelint": "^7.9.0",
    "stylelint-config-modularis": "^4.0.1",
    "uncss": "^0.14.1"
  },
  "scripts": {
    "init": "yarn && http2-server --generate-cert",
    "start": "yarn run serve-dev",
    "serve-dev": "http2-server dist/dev -o -g -P",
    "serve-prod": "http2-server dist/prod -o -g -P",
    "build-dev": "yarn run clean-dev && node scripts/build.js && cp -R resources/images dist/dev/ && mv dist/dev/images/favicon.ico dist/dev",
    "build-prod": "yarn run clean-prod && NODE_ENV=production node scripts/build.js && cp -R resources/images dist/prod/ && mv dist/prod/images/favicon.ico dist/prod",
    "clean-dev": "rm -Rf dist/dev",
    "clean-prod": "rm -Rf dist/prod",
    "lint": "stylelint 'resources/**/*.scss' && eslint scripts",
    "llighthouse": "lighthouse https://127.0.0.1:4443/",
    "lighthouse": "lighthouse https://markus.oberlehner.net/",
    "publish": "rsync -avz --delete --exclude=/.* --exclude=/error --exclude=/robots.txt --exclude=/stats --exclude=/google15e4ae9ecda47ac0.html -e ssh dist/prod/ vs0.oberlehner.net:/var/www/markus.oberlehner.net/web"
  }
}
